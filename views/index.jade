extends layout

block content
	div
		a(href="/idea") Add an idea
	div.container
		div.row
			each idea in ideas
				a(href="/idea/" + idea.id)
					div.col-sm-6.col-md-4
						div.thumbnail
							img(src='/idea/thumbs/' + idea.id, alt='idea_image')
							div.caption
								h3.bold #{idea.name}
								p.light 
									| #{idea.summary}